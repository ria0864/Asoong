<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffffff"
    >

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#ffffff"
        android:gravity="center_vertical">
        <ImageButton
            android:id="@+id/btn_back"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/back"
            android:background="#00000000"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="업체정보"
            android:textColor="#000000"
            android:textSize="20dp"/>
    </LinearLayout>

    <ScrollView
        android:id="@+id/ScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/acco_image"
                android:layout_width="match_parent"
                android:layout_height="185dp"
                android:src="@drawable/toscana"/>
            <ToggleButton
                android:id="@+id/toggle_like"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignTop="@+id/acco_image"
                android:layout_alignRight="@+id/acco_image"
                android:layout_marginTop="15dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/toggle_like"
                android:textOff=""
                android:textOn=""
                />
            <TextView
                android:id="@+id/name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignBottom="@+id/acco_image"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textColor="#ffffff"
                android:text="토스카나 호텔"/>
        </RelativeLayout>

        <LinearLayout
            android:padding="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="기본정보"
                android:textSize="17dp"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bar"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/location_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"
                android:drawableLeft="@drawable/location"
                android:text=" 제주특별자치도 서귀포시 융흥로 66번길 158-7"/>
            <TextView
                android:id="@+id/tel_info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="3dp"

                android:drawableLeft="@drawable/phone"
                android:text=" 064-735-7000"/>
                <TextView
                    android:id="@+id/like_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:drawableLeft="@drawable/like_b"
                    android:text=" 152"
                    />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="인사말"
                android:textSize="17dp"
                android:textStyle="bold"
                />
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bar"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:id="@+id/introInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="세계 7대 자연경관 환상의 섬 제주 서귀포시 강정동에 위치한 토스카나 호텔은 이탈리아 토스카나 지방을 모티브로 한 자연 휴양형 호텔입니다."/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/Customer_review"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="고객후기"
                    android:textSize="17dp"
                    android:textStyle="bold" />
            </RelativeLayout>

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/bar"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                >
                <EditText
                    android:id="@+id/edt_review"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_weight="20"
                    android:padding="5dp"
                    android:background="@drawable/edittext_box"
                    android:layout_marginBottom="1dp"
                    android:gravity="top" />
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginTop="7dp"
                    android:layout_weight="1"
                    android:text="등록"
                    android:textColor="#ffffffff"
                    android:background="@drawable/button_box"
                    />
            </LinearLayout>
            <ListView
                android:id="@+id/list_review"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                />
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

</LinearLayout>
