<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
 <LinearLayout
     android:id="@+id/dibs_linearLayout"
     android:layout_width="match_parent"
     android:layout_height="125dp"
     android:paddingRight="10dp"
     android:paddingLeft="10dp"
     android:background="#ffffffff"
     android:orientation="vertical">
     <RelativeLayout
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_marginTop="10dp"
         android:layout_marginBottom="3.5dp">
         <TextView
             android:id="@+id/dibs_userName"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="헬륨이"
             android:textStyle="bold"
             />
         <TextView
             android:id="@+id/dibs_reg_day"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_marginLeft="10dp"
             android:layout_toRightOf="@+id/dibs_userName"
             android:text="2016.3.6"
             android:textSize="11sp"
             android:layout_alignBottom="@+id/dibs_userName"
             />
         <ToggleButton
             android:id="@+id/toggle_heart2"
             android:layout_width="18dp"
             android:layout_height="16dp"
             android:layout_alignParentRight="true"
             android:layout_alignBottom="@+id/dibs_userName"
             android:layout_marginRight="5dp"
             android:background="@drawable/toggle_heart"
             android:textOff=""
             android:textOn=""
             android:checked="true"
             ></ToggleButton>
     </RelativeLayout>

     <TextView
         android:id="@+id/dibs_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:singleLine="true"
         android:ellipsize="end"
         android:textSize="17dp"
         android:textColor="#ff000000"
         android:text="정동진 근처 싸고 좋은 곳 추천해주세요."/>

         <TextView
             android:id="@+id/dibs_content"
             android:layout_width="wrap_content"
             android:layout_height="40dp"
             android:lines="2"
             android:ellipsize="end"
             android:text="안녕하세요~ 부모님 결혼기념일을 맞아 부모님 모시고 제주도로 여행 다녀오려고 합니다 ^^.부모님이 불편하시지 않도록 시설이 갖춰진 곳으로 추천 부탁드립니다."
             android:layout_marginTop="5dp" />
     <TextView
         android:id="@+id/dibs_commentNo"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="right"
         android:layout_marginRight="10dp"
         android:drawableLeft="@drawable/comment"
         android:gravity="center_vertical"
         android:text="+1"/>

 </LinearLayout>
</RelativeLayout>