<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="#ffffffff"
    android:padding="10dp"
    android:layout_marginTop="20dp"
    android:layout_marginBottom="20dp"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        >
        <TextView
            android:id="@+id/comment_accomName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="설레임펜션"
            android:textColor="#ff000000"
            android:textSize="17dp"/>
        <TextView
            android:id="@+id/comment_regDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/comment_accomName"
            android:layout_alignBottom="@+id/comment_accomName"
            android:layout_marginLeft="10dp"
            android:text="2016.5.7"
            android:textSize="11sp"
            android:textColor="#88000000"/>
        <TextView
            android:id="@+id/comment_price"
            android:layout_width="wrap_content"
            android:layout_height="20dp"
            android:gravity="center"
            android:textSize="15sp"
            android:textColor="#ffffff"
            android:background="#888888"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:text="120,000원"
            android:layout_alignParentRight="true"
            android:layout_alignBottom="@+id/comment_accomName"
            android:layout_marginRight="10dp"
            />
    </RelativeLayout>
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:src="@drawable/bar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/comment_content"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginTop="5dp"
            android:textColor="#ff000000"
            android:text="안녕하세요. 설레임펜션입니다. 2박하신다면 20만원에 해드리겠습니다. 연락주세요^^."
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:layout_marginTop="20dp"
            android:gravity="center_horizontal">
            <Button
                android:id="@+id/comment_btn_accomInfo"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:text="업체정보"
                android:textAllCaps="false"
                android:background="@drawable/button_border"
                android:textColor="#ffffff"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/comment_btn_tel"
                android:layout_width="130dp"
                android:layout_height="45dp"
                android:text="전화상담"
                android:background="@drawable/button_border"
                android:textColor="#ffffff"
                android:textStyle="bold"
                android:textAllCaps="false"
                android:layout_marginLeft="30dp"
                />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>