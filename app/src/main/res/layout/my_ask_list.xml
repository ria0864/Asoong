<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >
 <LinearLayout
     android:layout_width="match_parent"
     android:layout_height="125dp"
     android:paddingRight="10dp"
     android:paddingLeft="10dp"
     android:background="#ffffffff"
     android:orientation="vertical">
     <LinearLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content"
         android:orientation="horizontal"
         android:layout_marginTop="10dp">
         <TextView
             android:id="@+id/my_ask_reg_day"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="2016.3.6"
             />
         <LinearLayout
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:orientation="horizontal"
             android:gravity="right">
             <Button
                 android:id="@+id/btn_modify"
                 android:layout_width="35dp"
                 android:layout_height="20dp"
                 android:background="#00ffffff"
                 android:text="수정"/>
             <Button
                 android:id="@+id/btn_delete"
                 android:layout_width="35dp"
                 android:layout_height="20dp"
                 android:background="#00ffffff"
                 android:text="삭제"/>
         </LinearLayout>

     </LinearLayout>

     <TextView
         android:id="@+id/my_ask_title"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:singleLine="true"
         android:ellipsize="end"
         android:textSize="17dp"
         android:textColor="#ff000000"
         android:text="정동진 근처 싸고 좋은 곳 추천해주세요."/>

         <TextView
             android:id="@+id/my_ask_content"
             android:layout_width="wrap_content"
             android:layout_height="40dp"
             android:lines="2"
             android:ellipsize="end"
             android:text="안녕하세요~ 부모님 결혼기념일을 맞아 부모님 모시고 제주도로 여행 다녀오려고 합니다 ^^.부모님이 불편하시지 않도록 시설이 갖춰진 곳으로 추천 부탁드립니다."
             android:layout_marginTop="5dp" />
     <TextView
         android:id="@+id/my_ask_commentNo"
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:layout_gravity="right"
         android:layout_marginRight="10dp"
         android:drawableLeft="@drawable/comment"
         android:gravity="center_vertical"
         android:text="+1"/>

 </LinearLayout>
</RelativeLayout>